<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.utt.if26.uttcoins"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="fr.utt.if26.uttcoins.LoginActivity"
            android:clearTaskOnLaunch="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/title_activity_login"
            android:noHistory="true"
            android:windowSoftInputMode="adjustResize|adjustUnspecified" >
            <intent-filter android:label="@string/app_name" >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.utt.if26.uttcoins.WalletActivity"
            android:label="@string/title_activity_wallet" >
        </activity>
        <activity
            android:name="fr.utt.if26.uttcoins.SignupActivity"
            android:label="@string/title_activity_signup"
            android:parentActivityName="fr.utt.if26.uttcoins.LoginActivity"
            android:windowSoftInputMode="adjustResize|adjustUnspecified" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.utt.if26.uttcoins.LoginActivity" />
        </activity>
        <activity
            android:name="fr.utt.if26.uttcoins.TransactionsActivity"
            android:label="@string/title_activity_transactions">
        </activity>
        <activity
            android:name="fr.utt.if26.uttcoins.PaiementActivity"
            android:label="@string/title_activity_paiement" >
        </activity>
        <activity
            android:name="fr.utt.if26.uttcoins.ActivitiesActivity"
            android:label="@string/title_activity_activities" >
        </activity>
    </application>

</manifest>
